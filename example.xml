<service>
	<tool>Tool</tool>
	<name>Tokenizer2</name>
	<packages>
		<package>FL3 'pt'</package>
		<package>Lingua::FreeLing3::Sentence</package>
		<package>Lingua::FreeLing3::Utils qw/word_analysis/</package>
	</packages>
	<info>
		<hash_token>tokenizer2</hash_token>
		<parameters>
			<parameter required="1">
				<param_name>text</param_name>
				<param_description>The text to be tokenized</param_description>
			</parameter>
			<parameter required="0">
				<param_name>outro</param_name>
				<param_description>Other argument</param_description>
				<param_default>default value</param_default>
			</parameter>
		</parameters>
		<subtitle>Subtitulo de tokenizer2</subtitle>
		<description>Descricao de tokenizer2</description>
		<example>
			<input>O input.</input>
			<output>["O","input","."]</output>
		</example>
		<cost>1</cost>
		<text_costs>
			<text_cost length="10" cost="1"/>
			<text_cost length="1000" cost="2"/>
		</text_costs>
	</info>
	<code>
	my $pt_tok = Lingua::FreeLing3::Tokenizer->new("pt");
  	my $tokens = $pt_tok->tokenize($text, to_text => 1);
  	return $tokens;
  	</code>
</service>